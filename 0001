
        private SimpleButton simpleButton1 = new DevExpress.XtraEditors.SimpleButton();
        public Form1()
        {
            InitializeComponent();
            List<Columns> DS = new List<Columns>();
            gridLookUpEdit1.Properties.PopupView.OptionsBehavior.AutoPopulateColumns = true;
            gridLookUpEdit1.Properties.ValueMember = "Col001";
            gridLookUpEdit1.Properties.DisplayMember = "Col001";

            for (int i = 0; i < 10; i++)
            {
                DS.Add(
                    new Columns() { Col001 = i.ToString(), Col002 = "123", Col003 = "qwe" }
                );
            }

            gridLookUpEdit1.Properties.DataSource = DS;
            simpleButton1.Text = "Filter it!";
            gridLookUpEdit1.Popup += GridLookUpEdit1_Popup;
        }

        private void SimpleButton1_Click(object sender, EventArgs e)
        {
            throw new NotImplementedException("click fired");
        }

        private void GridLookUpEdit1_Popup(object sender, EventArgs e)
        {
            Control popupWindow = ((IPopupControl)sender).PopupWindow;
            popupWindow.Controls.Add(simpleButton1);
            simpleButton1.Anchor = AnchorStyles.Bottom;
            simpleButton1.Height = 15;
            simpleButton1.Location = new Point(popupWindow.Width - simpleButton1.Width*2, popupWindow.Height - simpleButton1.Height - 3);
        }
