        public partial class Form1 : Form
    {
        List<FIO> _fios = new List<FIO>();
        public Form1()
        {
            InitializeComponent();
            _fios.Add(new FIO() { FirstName = "111", LastName = "222" });
            _fios.Add(new FIO() { FirstName = "211", LastName = "222" });
            _fios.Add(new FIO() { FirstName = "311", LastName = "222" });
            _fios.Add(new FIO() { FirstName = "411", LastName = "222" });

            TreeListColumn col1 = new TreeListColumn();
            col1.Caption = "FirstName";
            col1.FieldName = "FirstName";
            col1.VisibleIndex = 0;
            treeList1.OptionsBehavior.Editable = false;
            treeList1.Columns.Add(col1);
            treeList1.DataSource = _fios;

            treeList1.OptionsSelection.EnableAppearanceFocusedCell = false;
        }

        private void button1_Click(object sender, EventArgs e)
        {
            selectedFio = _fios[3];
        }

        private void button2_Click(object sender, EventArgs e)
        {
            var newFio = new FIO() { FirstName = "qqq", LastName = "222" };
            _fios.Add(newFio);
            treeList1.RefreshDataSource();
            selectedFio = newFio;
        }

        private void treeList1_FocusedNodeChanged(object sender, DevExpress.XtraTreeList.FocusedNodeChangedEventArgs e)
        {
            var q = (treeList1.GetDataRecordByNode(treeList1.FocusedNode) as FIO);
            textBox1.Text = q.FirstName;
        }

        private FIO selectedFio {
            get { return (treeList1.GetDataRecordByNode(treeList1.FocusedNode) as FIO); }
            set {
                var node = treeList1.FindNode(n =>
                {
                    if (treeList1.GetDataRecordByNode(n) is FIO)
                    {
                        var fio = (treeList1.GetDataRecordByNode(n) as FIO);
                        return fio != null && fio.FirstName == value.FirstName;
                    }
                    return false;
                });
                treeList1.FocusedNode = node;
                treeList1.Focus();
            }
        }

        private void textBox1_TextChanged(object sender, EventArgs e)
        {
            selectedFio.FirstName = textBox1.Text;
            treeList1.RefreshDataSource();
        }
    }
    public class FIO
    {
        public string FirstName { get; set; }
        public string LastName { get; set; }
    }
